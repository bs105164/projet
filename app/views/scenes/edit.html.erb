<% provide(:title, 'Edition Scene') %>
<h1>Edition Scene</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@scene) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :title %>
	<%= f.text_field :title %>
        
	<%= f.label :content %>
	<%= f.text_area :content %>
         
        <%= f.label :periode %>
	<%= f.text_field :periode %>

	<%= f.submit "Modifier Scene", class: "btn btn-large btn-primary" %>
     <% end %>
   </div>
</div>
