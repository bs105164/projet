<% provide(:title, 'Creation Scene') %>
<h1>Creation Scene</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @scene, as: :scene, url: createscene_path(@chapitre.id) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title %>
	<%= f.text_field :title %>
        
	<%= f.label :content %>
	<%= f.text_area :content %>
        
        <%= f.label :periode %>
	<%= f.text_field :periode %>
 
	<%= f.submit "Ajouter Scene", class: "btn btn-large btn-primary" %>
     <% end %>
   </div>
</div>
